    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@material-ui/core": "^4.9.11",
    "axios": "^0.19.2",
    "babel-core": "^6.26.3",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.4.1",
    "compression": "^1.7.4",
    "css-loader": "^3.6.0",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "firebase": "^7.15.4",
    "if-env": "^1.0.4",
